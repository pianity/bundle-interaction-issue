{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es2021"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src/",
        "paths": {
            "@/*": ["*"]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    }
}
